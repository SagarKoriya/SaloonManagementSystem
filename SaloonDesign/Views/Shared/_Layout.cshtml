<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SaloonDesign</title>

    <!-- base:css -->
    <link rel="stylesheet" href="../wwwroot/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../wwwroot/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../wwwroot/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../wwwroot/images/favicon.png" />



</head>
<body>
    <header>
        <div class="horizontal-menu">
            <nav class="navbar top-navbar col-lg-12 col-12 p-0">
                <div class="container-fluid">
                    <div class="navbar-menu-wrapper d-flex align-items-center justify-content-between">
                        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                            <a class="navbar-brand brand-logo" href="index.html">
                                <img src="https://res.cloudinary.com/dzer9awba/image/upload/v1678269906/.net/stylettelogo_dhpkeu.png" alt="logo" />
                            </a>
                            <a class="navbar-brand brand-logo-mini" href="index.html">
                                <img src="images/Logo.png"
                                     alt="logo" />
                            </a>
                        </div>
                        <ul class="navbar-nav navbar-nav-right">
                            <li class="nav-item nav-profile dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"
                                   id="profileDropdown">
                                    <span class="nav-profile-name">Johnson</span>
                                    <span></span>
                                    <img src="images/faces/face28.png" alt="profile" />
                                </a>
                                <div class="dropdown-menu dropdown-menu-right navbar-dropdown"
                                     aria-labelledby="profileDropdown">
                                    <a class="dropdown-item" asp-controller="MyProfile" asp-action="Index">
                                        <i class="mdi mdi-account text-primary"></i>
                                        My Profile
                                    </a>
                                    <a class="dropdown-item">
                                        <i class="mdi mdi-logout text-primary"></i>
                                        Logout
                                    </a>
                                </div>
                            </li>
                        </ul>
                        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
                                data-toggle="horizontal-menu-toggle">
                            <span class="mdi mdi-menu"></span>
                        </button>
                    </div>
                </div>
            </nav>
            <nav class="bottom-navbar">
                <div class="container">
                    <ul class="nav page-navigation">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="mdi mdi-file-document-box menu-icon"></i>
                                <span class="menu-title">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Appointment" asp-action="Index" class="nav-link">
                                <i class="mdi mdi-cube-outline menu-icon"></i>
                                <span class="menu-title">Appointment</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Client" asp-action="Index" class="nav-link">
                                <i class="mdi mdi-account-multiple menu-icon"></i>
                                <span class="menu-title">Clients</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Service" asp-action="Index" class="nav-link">
                                <i class="mdi mdi-emoticon menu-icon"></i>
                                <span class="menu-title">Services</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Purchase" asp-action="Index" class="nav-link">
                                <i class="mdi mdi-finance menu-icon"></i>
                                <span class="menu-title">Purchases</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Expance" asp-action="Index" class="nav-link">
                                <i class="mdi mdi-grid menu-icon"></i>
                                <span class="menu-title">Expances</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container-scroller p-5 bg-light">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SaloonDesign - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- container-scroller -->
    <!-- base:js -->
    <script src="../wwwroot/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="../wwwroot/js/template.js"></script>
    <!-- endinject -->
    <!-- plugin js for this page -->
    <!-- End plugin js for this page -->
    <script src="../wwwroot/vendors/chart.js/Chart.min.js"></script>
    <script src="../wwwroot/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="../wwwroot/vendors/chartjs-plugin-datalabels/chartjs-plugin-datalabels.js"></script>
    <script src="../wwwroot/vendors/justgage/raphael-2.1.4.min.js"></script>
    <script src="../wwwroot/vendors/justgage/justgage.js"></script>
    <script src="../wwwroot/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- Custom js for this page-->
    <script src="../wwwroot/js/dashboard.js"></script>
    <!-- End custom js for this page-->

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
